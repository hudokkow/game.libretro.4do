<?xml version="1.0" encoding="UTF-8"?>
<addon id="game.libretro.4do"
		name="3DO (4DO)"
		version="1.3.2"
		provider-name="Libretro">
	<requires>
		<import addon="game.libretro" version="1.0.0"/>
		<import addon="game.controller.3do" version="1.0.0" optional="true"/>
	</requires>
	<extension point="kodi.gameclient"
			library_android="libgame.libretro.4do.so"
			library_linux="game.libretro.4do.so"
			library_osx="game.libretro.4do.dylib"
			library_windx="game.libretro.4do.dll"
			library_wingl="game.libretro.4do.dll">
		<platforms>3DO</platforms>
		<extensions>iso</extensions>
		<supports_vfs>false</supports_vfs>
		<supports_no_game>false</supports_no_game>
	</extension>
	<extension point="xbmc.addon.metadata">
		<summary lang="en">4DO v1.3.2.3</summary>
		<description>Port of 4DO/libfreedo to libretro.

Supported files: .iso

License: LGPL</description>
		<platform>all</platform>
		<nofanart>true</nofanart>
	</extension>
</addon>
